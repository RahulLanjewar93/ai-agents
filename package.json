{
  "name": "vizmo-ai",
  "version": "1.0.0",
  "description": "Monorepo for ai agents used across vizmo",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx -r dotenv/config --inspect src/server.ts",
    "dev:watch": "tsx watch -r dotenv/config --inspect src/server.ts",
    "test": "test",
    "format": "prettier --write --ignore-unknown src",
    "lint": "eslint --ext .ts ./src",
    "prepare": "husky"
  },
  "keywords": [
    "vizmo",
    "ai"
  ],
  "author": "Hari Prasad <hari@vizmo.in>",
  "license": "ISC",
  "dependencies": {
    "@notionhq/client": "5.0.0",
    "@slack/bolt": "4.4.0",
    "dotenv": "17.2.2",
    "express": "^5.1.0",
    "morgan": "^1.10.1",
    "openai": "5.20.1",
    "prettier": "3.6.2"
  },
  "devDependencies": {
    "@eslint/js": "9.35.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "24.3.1",
    "@typescript-eslint/eslint-plugin": "8.30.1",
    "@typescript-eslint/parser": "8.30.1",
    "eslint": "9.35.0",
    "eslint-config-prettier": "10.1.8",
    "globals": "16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "tsc-alias": "1.8.15",
    "tsx": "4.20.5",
    "type-fest": "^5.0.0",
    "typescript-eslint": "8.43.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
